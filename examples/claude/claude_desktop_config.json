{
  "mcpServers": {
    "komodo-mcp-server": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--network",
        "default",
        "ghcr.io/mp-tool/komodo-mcp-server:latest"
      ],
      "env": {
        "KOMODO_URL": "https://komodo.example.com:9120",
        "KOMODO_USERNAME": "user",
        "KOMODO_PASSWORD": "password"
      }
    }
  }
}
