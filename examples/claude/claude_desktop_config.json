{
  "mcpServers": {
    "Komodo MCP Server": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e", "MCP_TRANSPORT=stdio",
        "-e", "KOMODO_URL=https://komodo.example.com:9120",
        "-e", "KOMODO_USERNAME=username",
        "-e", "KOMODO_PASSWORD=password",
        "ghcr.io/mp-tool/komodo-mcp-server:latest"
      ]
    }
  }
}
