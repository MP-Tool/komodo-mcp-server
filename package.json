{
  "name": "komodo-mcp-server",
  "version": "1.0.5",
  "description": "Model Context Protocol Server for Komodo (Container Manager)",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "komodo-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "npm run build && node build/index.js",
    "clean": "rm -rf build, node_modules ",
    "docker:build": "docker build --build-arg VERSION=$npm_package_version -t komodo-mcp-server:$npm_package_version .",
    "docker:build-no-cache": "docker build --no-cache --build-arg VERSION=$npm_package_version -t komodo-mcp-server:$npm_package_version .",
    "docker:run": "docker run -i komodo-mcp-server"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "komodo",
    "docker",
    "docker-compose",
    "container",
    "devops",
    "orchestration",
    "automation",
    "typescript"
  ],
  "author": "Marcel Pfennig",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MP-Tool/komodo-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/MP-Tool/komodo-mcp-server/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "axios": "^1.13.2",
    "express": "^5.2.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.25",
    "typescript": "^5.9.3"
  }
}
