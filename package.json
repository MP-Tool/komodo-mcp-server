{
  "name": "komodo-mcp-server",
  "version": "1.1.0",
  "description": "Model Context Protocol Server for Komodo (Container Manager)",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "komodo-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "npm run build && node build/index.js",
    "clean": "rm -rf build, node_modules ",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "vitest run",
    "docker:build": "docker build --build-arg VERSION=$npm_package_version -t komodo-mcp-server:$npm_package_version .",
    "docker:build-no-cache": "docker build --no-cache --build-arg VERSION=$npm_package_version -t komodo-mcp-server:$npm_package_version ."
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "komodo",
    "docker",
    "docker-compose",
    "container",
    "devops",
    "orchestration",
    "automation",
    "typescript"
  ],
  "author": "Marcel Pfennig",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MP-Tool/komodo-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/MP-Tool/komodo-mcp-server/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "komodo_client": "^1.19.5",
    "@modelcontextprotocol/sdk": "^1.24.4",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.25",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.15",
    "fast-check": "^4.3.0"
  }
}
